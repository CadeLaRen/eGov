<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
        *****************GLOBAL BEAN DEFINITION XML EDITING RULES.*****************

        #ALWAYS TAKE LATEST SVN UPDATE OF THIS XML BEFORE COMMIT YOUR CHANGES.
        #NEVER ADD YOUR BEAN DEFINITION OVER HERE. THIS IS ONLY A PLACE TO REFER YOUR OTHER BEAN DEFINITION XML

        ***NEVER EVER EDIT WITHOUT INFORMING INFRASTRUCTURE TEAM***

        ***************************************************************************
    -->

    <bean name="erpApplicationContext" class="org.springframework.context.support.ClassPathXmlApplicationContext">
        <constructor-arg>
            <list>
                <value>config/spring/applicationContext-properties.xml</value>
                <value>config/spring/applicationContext-messages.xml</value>
                <value>config/spring/applicationContext-hibernate.xml</value>
                <value>classpath*:config/spring/applicationContext-egi.xml</value>
                <value>config/spring/applicationContext-security.xml</value>
                <value>config/spring/applicationContext-quartz.xml</value>
            </list>
        </constructor-arg>
    </bean>
</beans>
