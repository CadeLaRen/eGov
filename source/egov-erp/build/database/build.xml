<project name="egov-liquibase" xmlns:liquibase="antlib:liquibase.integration.ant">
<property file="liquibase.properties" prefix="db"/>	
<path id="path" >
        <fileset dir="lib">
            <include name="egov-database-1.0-SNAPSHOT-jar-with-dependencies.jar" />
        </fileset>
</path>
	
	
<taskdef resource="antlib.xml" uri="antlib:liquibase.integration.ant">
	 <classpath>
	      <pathelement path="${basedir}"/>
	      <fileset dir="${basedir}/lib">
		<include name="*.jar"/>
	      </fileset>
    </classpath>
</taskdef>


<liquibase:updateDatabase changeLogFile="changelog.xml"
						  dropFirst="false" 
						  classpathref="path1"
						  promptOnNonLocalDatabase="false">
	
	<liquibase:database 			driver="${db.driver}" 
						url="${db.url}" 
						user="${db.username}" 
						password="${db.password}"/>
</liquibase:updateDatabase>
</project>

