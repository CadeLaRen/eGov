<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="false">
	<class name="org.egov.infstr.models.State" table="EG_WF_STATES" dynamic-insert="true" dynamic-update="true">
		<id name="id" column="ID" type="long" unsaved-value="null">
			<generator class="native">
				<param name="sequence">EG_WF_STATES_SEQ</param>
			</generator>
		</id>
		<many-to-one name="ownerPosition" class="org.egov.pims.commons.Position" column="OWNER_POS" />
		<many-to-one name="ownerUser" class="org.egov.lib.rjbac.user.UserImpl" column="OWNER_USER" />
		<property name="senderName" type="string"/>
		<bag name="history" table="EG_WF_STATE_HISTORY" inverse="true" lazy="extra" fetch="select" cascade="all" order-by="id asc">
            <key>
                <column name="state_id" not-null="true"/>
            </key>
            <one-to-many class="org.egov.infstr.models.StateHistory"/>
        </bag>
		<many-to-one name="createdBy" class="org.egov.lib.rjbac.user.UserImpl" column="CREATED_BY" not-null="true" fetch="select"/>
		<many-to-one name="modifiedBy" class="org.egov.lib.rjbac.user.UserImpl" column="MODIFIED_BY" not-null="true" fetch="select"/>
		<property name="type" column="TYPE" type="string" />
		<property name="status" column="STATUS">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">org.egov.infstr.models.StateStatus</param>
			</type>
		</property>
		<property name="value" column="VALUE" type="string" />
		<property name="nextAction" column="NEXT_ACTION" type="string" />
		<property name="comments" column="COMMENTS" type="string" />
		<property name="extraInfo" column="EXTRAINFO" type="string" />
		<property name="dateInfo" column="DATEINFO" type="timestamp" />
		<property name="extraDateInfo" column="EXTRADATEINFO" type="timestamp" />
		<property name="createdDate" column="CREATED_DATE" type="timestamp" />
		<property name="modifiedDate" column="MODIFIED_DATE" type="timestamp" />
	</class>

	<query name="WORKFLOWTYPES">
		<![CDATA[
     	select distinct s.type from org.egov.infstr.models.State as s where s.ownerPosition.id=?  and s.status is not 2 
    ]]>

	</query>
	<query name="WORKFLOWTYPES_BY_ID">
		<![CDATA[
     	from org.egov.infstr.models.State as s where s.id=?   
    ]]>
	</query>
	
</hibernate-mapping>
