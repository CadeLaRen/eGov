<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd"
       default-lazy-init="true">
       
	<bean id="egovSessionFactory" class="org.egov.infstr.services.SessionFactory" />
	<bean id="persistenceService" class="org.egov.infstr.services.PersistenceService" scope="prototype">
		<property name="sessionFactory" ref="egovSessionFactory" />
	</bean>
	
	<bean id="functionaryService" parent="persistenceService" lazy-init="true">
      <property name="type">
		   <value>org.egov.commons.Functionary</value>
      </property>
	</bean>
	
	<bean id="chartOfAccountsService" parent="persistenceService" lazy-init="true">
      <property name="type">
		   <value>org.egov.commons.CChartOfAccounts</value>
      </property>
	</bean>
	
</beans>