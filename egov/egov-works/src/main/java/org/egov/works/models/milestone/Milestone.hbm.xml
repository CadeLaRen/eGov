<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="org.egov.works.models.milestone.Milestone" table="EGW_MILESTONE">
		<id
			name="id"
			column="ID"
			type="long"
			unsaved-value="null">
			<generator class="sequence">
				<param name="sequence">EGW_MILESTONE_SEQ</param>
			</generator>
		</id>
		<many-to-one name="createdBy" class="org.egov.lib.rjbac.user.UserImpl" column="CREATED_BY" fetch="select" />
		<many-to-one name="modifiedBy" class="org.egov.lib.rjbac.user.UserImpl" column="MODIFIED_BY" fetch="select"/>
		<property name="createdDate" column="CREATED_DATE" type="timestamp" />
		<property name="modifiedDate" column="MODIFIED_DATE" type="timestamp" />
		<many-to-one name="state" class="org.egov.infstr.models.State" cascade="all">
			<column name="STATE_ID" />
		</many-to-one>
		<many-to-one name="workOrderEstimate" class="org.egov.works.models.workorder.WorkOrderEstimate" column="WORKORDER_EST_ID" not-null="true" fetch="select" />
		<many-to-one name="egwStatus" class="org.egov.commons.EgwStatus" column="STATUS_ID" not-null="true" fetch="select" />
		<property name="documentNumber" type="long">
			<column name="DOCUMENT_NUMBER" />
		</property>	 

		<list name="activities" cascade="all,delete-orphan">
			<key column="MILESTONE_ID" not-null="true" />
			<list-index column="activity_index" />
			<one-to-many
				class="org.egov.works.models.milestone.MilestoneActivity" />
		</list>
		<set name="trackMilestone" inverse="true" >
			<key column="MILESTONE_ID" />
			<one-to-many class="org.egov.works.models.milestone.TrackMilestone"  />
		</set>
</class>

</hibernate-mapping>
