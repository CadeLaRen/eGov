<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.egov.works.models.measurementbook.MBMeasurementSheet" table="EGW_MB_MEASUREMENTSHEET">
		<id name="id" column="ID" type="long" unsaved-value="null">
			<generator class="native"><param name="sequence">EGW_MB_MEASUREMENTSHEET_SEQ</param></generator>
		</id>
		<property name="no"><column name="NO"/></property>
		<property name="uomLength"><column name="LENGTH"/></property>
		<property name="width"><column name="WIDTH" /></property>
		<property name="depthOrHeight"><column name="DEPTH_HEIGHT"/></property>
		<property name="remarks"><column name="REMARKS"/></property>
		<property name="identifier"><column name="IDENTIFIER"/></property>
		<property name="quantity"><column name="QUANTITY"/></property>
		<property name="createdDate" column="CREATED_DATE" type="timestamp" />
		<property name="modifiedDate" column="MODIFIED_DATE" type="timestamp" />
		<many-to-one name="createdBy" class="org.egov.lib.rjbac.user.UserImpl" column="CREATED_BY" fetch="select" />
		<many-to-one name="modifiedBy" class="org.egov.lib.rjbac.user.UserImpl" column="MODIFIED_BY" fetch="select" /> 
       	<many-to-one name="mbDetails"
			class="org.egov.works.models.measurementbook.MBDetails" fetch="select" insert="false" update="false">
			<column name="MBDETAILS_ID" not-null="true" />
		</many-to-one> 
		<many-to-one name="woMeasurementSheet"
			class="org.egov.works.models.workorder.WorkOrderMeasurementSheet" >
			<column name="WO_MEASUREMENTSHEET_ID" not-null="false" />  
		</many-to-one>
	</class>
	
	<query name="prevMBMsheetsIncludingCurEntry">
               <![CDATA[
            from MBMeasurementSheet mbms where (mbms.mbDetails.mbHeader.createdDate
            < (select createdDate from MBHeader where id = ?) or (select count(*) from MBHeader where id = ?) = 0 )
            and mbms.mbDetails.mbHeader.state.previous.value != 'CANCELLED' and mbms.woMeasurementSheet.id = ?  
   ]]>
   </query>
   
   <query name="prevMBMsheetsIncludingCurEntryForZeroQty">
               <![CDATA[
            from MBMeasurementSheet mbms where (mbms.mbDetails.mbHeader.createdDate
            < (select createdDate from MBHeader where id = ?) or (select count(*) from MBHeader where id = ?) = 0 )
            and mbms.mbDetails.mbHeader.state.previous.value != 'CANCELLED' and mbms.mbDetails.workOrderActivity.id = ?  
   ]]>
   </query>
   
   <!-- in create mode first time -->
   <query name="prevMBMsheets">
               <![CDATA[
            from MBMeasurementSheet mbms where (mbms.mbDetails.mbHeader.createdDate
            < (select createdDate from MBHeader where id = ?) or (select count(*) from MBHeader where id = ?) = 0 ) and mbms.mbDetails.mbHeader.state.previous.value != 'CANCELLED' and mbms.woMeasurementSheet.id = ?  
   ]]>
   </query>
</hibernate-mapping>
