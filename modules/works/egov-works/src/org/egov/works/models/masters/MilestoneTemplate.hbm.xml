<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="org.egov.works.models.masters.MilestoneTemplate" table="EGW_MILESTONE_TEMPLATE">
		<id
			name="id"
			column="ID"
			type="long"
			unsaved-value="null">
			<generator class="sequence">
				<param name="sequence">EGW_MILESTONE_TEMPLATE_SEQ</param>
			</generator>
		</id>
		<property name="code" type="string">
			<column name="CODE" length="256" not-null="true" unique="true"/> 
		</property>
		<property name="name" type="string">
			<column name="NAME" length="256" not-null="true" /> 
		</property>
		<property name="description" type="string">
			<column name="DESCRIPTION" length="1024" /> 
		</property>
		<property name="status" type="int">
			<column name="STATUS" /> 
		</property>
		<many-to-one name="createdBy" class="org.egov.lib.rjbac.user.UserImpl" column="CREATED_BY" fetch="select" />
		<many-to-one name="modifiedBy" class="org.egov.lib.rjbac.user.UserImpl" column="MODIFIED_BY" fetch="select"/>
		<property name="createdDate" column="CREATED_DATE" type="timestamp" />
		<property name="modifiedDate" column="MODIFIED_DATE" type="timestamp" />
       	<many-to-one name="workType"
			class="org.egov.commons.EgwTypeOfWork" fetch="select">
			<column name="WORKTYPE_ID" not-null="true" />
		</many-to-one>
        <many-to-one name="subType"
			class="org.egov.commons.EgwTypeOfWork" fetch="select"> 
			<column name="SUBTYPE_ID" />
		</many-to-one>
		<many-to-one name="state" class="org.egov.infstr.models.State" cascade="all">
			<column name="STATE_ID" />
		</many-to-one>
		<many-to-one name="egwStatus" class="org.egov.commons.EgwStatus" column="STATUS_ID" not-null="true" fetch="select" />

		<list name="activities" cascade="all,delete-orphan">
			<key column="TEMPLATEID" not-null="true" />
			<list-index column="activity_index" />
			<one-to-many
				class="org.egov.works.models.masters.MilestoneTemplateActivity" />
		</list>
       
   
</class>

</hibernate-mapping>
