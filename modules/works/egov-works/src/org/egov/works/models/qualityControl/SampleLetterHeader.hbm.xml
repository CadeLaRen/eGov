<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.egov.works.models.qualityControl.SampleLetterHeader" table="EGW_QC_SAMPLELETTER_HEADER">
		<id name="id" type="long">
			<column name="ID" />
			<generator class="sequence">
				<param name="sequence">EGW_QC_SAMPLELETTER_HEADER_SEQ</param>
			</generator>
		</id>
		
		<many-to-one name="createdBy" class="org.egov.lib.rjbac.user.UserImpl" column="CREATED_BY" not-null="true" fetch="select" />
		<many-to-one name="modifiedBy" class="org.egov.lib.rjbac.user.UserImpl" column="MODIFIED_BY" fetch="select"/>
		<property name="createdDate" column="CREATED_DATE" not-null="true" type="timestamp" />
		<property column="MODIFIED_DATE" name="modifiedDate" type="timestamp" />
		
		<property name="sampleLetterNumber" type="string">
            <column name="SAMPLELETTER_NUMBER" length="256" not-null="true" unique="true" /> 
        </property>
        
        <property name="coveringLetterNumber" type="string">
            <column name="COVERINGLETTER_NUMBER" length="256" not-null="true" unique="true" /> 
        </property>
        
        <many-to-one name="testSheetHeader" class="org.egov.works.models.qualityControl.TestSheetHeader" column="TESTSHEETHEADER_ID" not-null="true" fetch="select"/>
        <many-to-one name="designation1" class="org.egov.pims.commons.DesignationMaster" column="DESIGNATION1" not-null="true" fetch="select" />
        <many-to-one name="designation2" class="org.egov.pims.commons.DesignationMaster" column="DESIGNATION2" not-null="true" fetch="select" />
        <many-to-one name="sampleCollectedBy1" class="org.egov.pims.model.PersonalInformation" column="SAMPLE_COLLECTED_BY1" not-null="true" fetch="select" />
        <many-to-one name="sampleCollectedBy2" class="org.egov.pims.model.PersonalInformation" column="SAMPLE_COLLECTED_BY2" not-null="true" fetch="select" />
        
		<property name="dispatchDate" type="date">
			<column name="DISPATCH_DATE" length="7" />
		</property>
		
		<property name="castingDate" type="date">
			<column name="CASTING_DATE" length="7" />
		</property>
		
		<property name="samplingDate" type="date">
			<column name="SAMPLING_DATE" length="7" not-null="true" />
		</property>
		
		<property name="sampleLetterDate" type="date">
			<column name="SAMPLELETTER_DATE" length="7" not-null="true" />
		</property>
		
		<property name="location" type="string">
            <column name="LOCATION" length="256" not-null="true"/>
        </property>
        
        <property name="remarks" type="string">
			<column name="REMARKS" length="1024" />
		</property>
        
        <many-to-one name="egwStatus" column="STATUS_ID" not-null="true" />
        
        <many-to-one name="state" class="org.egov.infstr.models.State" cascade="all">
			<column name="STATE_ID" />
		</many-to-one>
        
        <list name="sampleLetterDetails" cascade="all,delete-orphan">
			<key column="SAMPLELETTERHEADER_ID" not-null="true" />
			<list-index column="SAMPLELETTERDETAILS_INDEX" />
			<one-to-many
				class="org.egov.works.models.qualityControl.SampleLetterDetails" />
		</list>
		
     </class>  
     
     <query name="getContractorsWithSampleLetter">
		<![CDATA[
     	select distinct slh.testSheetHeader.workOrder.contractor from SampleLetterHeader slh where slh.egwStatus.code!='NEW' order by slh.testSheetHeader.workOrder.contractor.code 
    ]]>
	</query>
	
</hibernate-mapping>