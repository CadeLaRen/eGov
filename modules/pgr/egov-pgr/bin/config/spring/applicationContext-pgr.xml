<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
		
	<bean id="compReceivingModesService" class="org.egov.pgr.domain.services.impl.CompReceivingModesServiceImpl"/>
	
	<bean  id="compReceivingCenterService" class="org.egov.pgr.domain.services.impl.CompReceivingCenterServiceImpl"/>
	
	<bean id="complaintTypeService" class="org.egov.pgr.domain.services.impl.ComplaintTypeServiceImpl"/>
	
	<bean  id="complaintStatusService" class="org.egov.pgr.domain.services.impl.ComplaintStatusServiceImpl">
		<property name="appConfigValuesDao"  ref="appConfigValuesDAO" />
	</bean>

	<bean id="complaintService" class="org.egov.pgr.domain.services.impl.ComplaintDetailServiceImpl">
		<property name="boundaryService"  ref="boundaryService" />
		<property name="complaintTypeService"  ref="complaintTypeService" />
		<property name="departmentService"  ref="departmentService" />
		<property name="boundaryTypeService"  ref="boundaryTypeService" />
		<property name="priorityService"  ref="priorityService" />
	</bean>
			
	<bean id="redressalService" class="org.egov.pgr.domain.services.impl.RedressalDetailsServiceImpl">
		<property name="complaintStatusService"  ref="complaintStatusService" />
		<property name="userService"  ref="userService" />
		<property name="roleService"  ref="roleService" />
		<property name="appConfigValuesDao"  ref="appConfigValuesDAO" />
		<property name="eisCommonsService"  ref="eisCommonsService" />
	</bean>		
	
	<bean id="complaintGroupService" class="org.egov.pgr.domain.services.impl.ComplaintGroupServiceImpl"/>
	
	<bean id="escalationService" class="org.egov.pgr.domain.services.impl.EscalationServiceImpl"/>
	
	<bean id="priorityService" class="org.egov.pgr.domain.services.impl.PriorityServiceImpl"/>
	
	<bean id="categoryService" class="org.egov.pgr.domain.services.impl.CategoryServiceImpl"/>
	
	<bean id="complaintWorkflowService" class="org.egov.infstr.workflow.SimpleWorkflowService">
	 	<constructor-arg ref="complaintService" index="0"/>
     	<constructor-arg value="org.egov.pgr.domain.entities.ComplaintDetails" index="1"/>
	</bean>	
	
	<bean id="pgrCommonUtils" class="org.egov.pgr.utils.PgrCommonUtils">
		<property name="boundaryDao" ref="boundaryDAO"/>
		<property name="boundaryTypeService" ref="boundaryTypeService"/>
		<property name="departmentService" ref="departmentService"/>
		<property name="heirarchyTypeService" ref="heirarchyTypeService"/>
		<property name="userService" ref="userService"/>
	</bean>
</beans>