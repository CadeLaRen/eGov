<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="Deductions-test" language="groovy" pageWidth="612" pageHeight="792" columnWidth="610" leftMargin="1" rightMargin="1" topMargin="1" bottomMargin="1">
	<import value="java.util.*"/>
	<parameter name="CURRENT_PAYID" class="java.math.BigDecimal"/>
	<queryString>
		<![CDATA[SELECT NVL(sal.head,c.NAME) AS head , SUM(ded.amount) AS amount, adv.ADVANCE_AMT advamt, adv.PENDING_AMT pendamt, adv.INST_AMT AS instamt, adv.NUM_OF_INST  FROM EGPAY_DEDUCTIONS ded LEFT JOIN EGPAY_SALARYCODES sal ON ded.id_salcode = sal.ID
LEFT JOIN CHARTOFACCOUNTS c ON ded.id_Accountcode = c.ID LEFT JOIN EGPAY_SALADVANCES adv ON ded.ID_SAL_ADVANCE=adv.ID  WHERE ded.id_emppayroll = $P{CURRENT_PAYID}  GROUP BY  sal.head,c.NAME,sal.order_id,adv.ADVANCE_AMT, adv.INST_AMT, adv.PENDING_AMT,adv.NUM_OF_INST
ORDER BY sal.order_id ASC]]>
	</queryString>
